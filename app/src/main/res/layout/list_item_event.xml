<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip" >

    <!--  Hospital ImageView -->
    <LinearLayout android:id="@+id/hospital_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dip"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip"
        >

        <ImageView
            android:id="@+id/list_image"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:src="@drawable/ic_action_happy_face"
           />

    </LinearLayout>

    <!-- Event Name-->
    <TextView
        android:id="@+id/tv_event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/hospital_image_view"
        android:layout_toRightOf="@+id/hospital_image_view"
        android:text="Event Name"
        android:textColor="#040404"
        android:typeface="sans"
        android:textSize="15dip"
        android:textStyle="bold"/>

    <!-- Event Place -->
    <TextView
        android:id="@+id/tv_event_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_event_name"
        android:textColor="#343434"
        android:textSize="10dip"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/hospital_image_view"
        android:text="Event Place" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_event_type"
        android:text="Event type"
        android:textSize="9dp"
        android:layout_below="@+id/tv_event_place"
        android:layout_alignStart="@+id/tv_event_place"
        android:layout_alignLeft="@+id/tv_event_place"
        />

        <!-- Distance -->
    <TextView
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_event_date"
        android:layout_marginTop="20dp"
        android:layout_alignEnd="@id/tv_event_type"
        android:layout_alignRight="@+id/tv_event_type"
        android:id="@+id/tv_event_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="0km"
        android:layout_marginEnd="5dip"
        android:layout_marginRight="5dip"
        android:textSize="10dp"
        android:textColor="#000"
        android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_event_date"
            android:text="Event Date"
            android:textSize="10dp"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"/>


    <!-- Rightend Arrow
    <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
    -->

</RelativeLayout>